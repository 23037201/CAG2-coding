<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Edit</title>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center"><h2>Edit Products</h2></div>
    <br>
    <table class="table table-hover small text-center">
        <div class="summer">
          <h2>--SUMMER SPECIALS--</h2>
          <thead>
              <tr>
                <th width="100"></th>
                <th width="100">Product Name</th>
                <th width="100">Quantity</th>
                <th width="100">Price</th>
                <th width="50"></th>
                <th width="50"></th>
              </tr>
          </thead>
        </div>
        <tbody>
          <% for(let i = 0; i < summer.length; i++) { %>
            <tr>
              <td><img src="/images/<%= summer[i].image %>" width="50%"></td>
              <td><a href="/summer/<%= summer[i].id %>"><%= summer[i].productname %></a></td>
              <td><%= summer[i].quantity %></td>
              <td>$<%= summer[i].price %></td>
              <td><a href="/editSummer/<%= summer[i].id %>">&#x1F58B;</a></td>
              <td><a href="/deleteSummer/<%= summer[i].id %>" onclick="return confirm('Are you sure you want to delete this product?')">&times;</a></td>
            </tr>
          <% } %>
        </tbody>
    <br>
    <table class="table table-hover small text-center">
      <div class="bagel">
        <h2>--Bagel--</h2>
        <thead>
            <tr>
              <th width="100"></th>
              <th width="100">Product Name</th>
              <th width="100">Quantity</th>
              <th width="100">Price</th>
              <th width="50"></th>
              <th width="50"></th>
            </tr>
        </thead>
      </div>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td><img src="/images/<%= products[i].image %>" width="50%"></td>
            <td><a href="/product/<%= products[i].productId %>" ><%= products[i].productName %></a></td>            
            <td><%= products[i].quantity %></td>
            <td>$<%= products[i].price %></td>
            <!--Edit Link -->
            <td><a href="/editProduct/<%= products[i].productId %>">&#x1F58B;</a></td>
            <!--Delete Link -->
            <td><a href="/deleteProduct/<%= products[i].productId %>" onclick="return confirm('Are you sure you want to delete this product?')">&times;</a></td>
          </tr>
        <% } %>
      </tbody>
    </table>
    <a class="btn btn-primary" href="/">Done</a>
  </div>
</body>
</html>
