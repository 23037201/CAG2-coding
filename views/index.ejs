<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"></script>
  <title>Index</title>
  <style>
    h1{
      font-family:'Franklin Gothic Medium', 'Arial Narrow', Arial, sans-serif;font-weight: bold;
    }
    td{
      text-align: center;
    }
  </style>
</head>
<body>
  <%- include ('partials/navbar.ejs') %>
  <div class="container">
    <br>
    <div class="text-center"><h1>Welcom to Bagelnico&#x1F950;</h1></div>
    <br>
    <table class="table table-hover small text-center">
      <div class="summer">
        <h2>--SUMMER SPECIALS--</h2>
        <thead>
            <tr>
              <th width="100"></th>
              <th width="100">Product Name</th>
              <th width="100">Quantity</th>
              <th width="100">Price</th>
            </tr>
        </thead>
      </div>
      <tbody>
        <% for(let i = 0; i < summer.length; i++) { %>
          <tr>
            <td><img src="/images/<%= summer[i].image %>" width="50%"></td>
            <td><a href="/summer/<%= summer[i].id %>"><%= summer[i].productname %></a></td>
            <td><%= summer[i].quantity %></td>
            <td>$<%= summer[i].price %></td>
          </tr>
        <% } %>
      </tbody>
      
    </table>
    <table class="table table-hover small text-center">
      <div class="bagel">
        <h2>--ALL BAGEL--</h2>
        <thead>
            <tr>
              <th width="100"></th>
              <th width="100">Product Name</th>
              <th width="100">Quantity</th>
              <th width="100">Price</th>
            </tr>
        </thead>
      </div>
      <tbody>
        <% for(let i=0; i < products.length; i++) { %>
          <tr>
            <td><img src="/images/<%= products[i].image %>" width="50%"></td>
            <td><a href="/product/<%= products[i].productId %>" ><%= products[i].productName %></a></td>        
            <td><%= products[i].quantity %></td>
            <td>$<%= products[i].price %></td>
          </tr>
        <% } %>
      </tbody>
    </table>
  </div>
</body>
</html>
